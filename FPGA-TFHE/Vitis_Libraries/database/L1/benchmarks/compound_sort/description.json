{
    "name": "Xilinx Compound Sort Benchmark",
    "description": "Xilinx Compound Sort Benchmark",
    "flow": "vitis",
    "gui": true,
    "platform_type": "pcie",
    "platform_whitelist": [
        "xilinx_u280_xdma_201920_3",
        "u250",
        "u200",
        "xilinx_u50_gen3x16_xdma_201920_3"
    ],
    "platform_blacklist": [
        "zc"
    ],
    "platform_properties": {
        "u280": {
            "containers": [
                {
                    "name": "SortKernel",
                    "ldclflags": "--config PROJECT/conn_u280.cfg"
                }
            ]
        },
        "u250": {
            "containers": [
                {
                    "name": "SortKernel",
                    "ldclflags": "--config PROJECT/conn_u250.cfg"
                }
            ]
        },
        "u200": {
            "containers": [
                {
                    "name": "SortKernel",
                    "ldclflags": "--config PROJECT/conn_u200.cfg"
                }
            ]
        },
        "u50": {
            "containers": [
                {
                    "name": "SortKernel",
                    "ldclflags": "--config PROJECT/conn_u50.cfg"
                }
            ]
        }
    },
    "launch": [
        {
            "cmd_args": " -xclbin BUILD/SortKernel.xclbin",
            "name": "generic launch for all flows"
        }
    ],
    "host": {
        "host_exe": "host.exe",
        "compiler": {
            "sources": [
                "host/main.cpp",
                "LIB_DIR/ext/xcl2/xcl2.cpp"
            ],
            "includepaths": [
                "LIB_DIR/L1/include/hw",
                "host",
                "kernel",
                "LIB_DIR/ext/xcl2",
                "LIB_DIR/../utils/L1/include"
            ],
            "options": "-O3 ",
            "symbols": [
                "PRAGMA"
            ]
        }
    },
    "v++": {
        "compiler": {
            "includepaths": [
                "LIB_DIR/L1/include/hw",
                "kernel"
            ]
        }
    },
    "containers": [
        {
            "accelerators": [
                {
                    "location": "kernel/kernel_sort_top.cpp",
                    "frequency": 300,
                    "clflags": " -D KERNEL_NAME=SortKernel",
                    "name": "SortKernel"
                }
            ],
            "frequency": 300,
            "name": "SortKernel"
        }
    ],
    "testinfo": {
        "disable": false,
        "jobs": [
            {
                "index": 0,
                "dependency": [],
                "env": "",
                "cmd": "",
                "max_memory_MB": {
                    "vitis_hw_build": 40960,
                    "vitis_hw_emu": 28672,
                    "vitis_sw_emu": 10240,
                    "vitis_hw_run": 10240
                },
                "max_time_min": {
                    "vitis_hw_build": 470,
                    "vitis_hw_emu": 470,
                    "vitis_sw_emu": 60,
                    "vitis_hw_run": 10
                }
            }
        ],
        "targets": [
            "vitis_sw_emu",
            "vitis_hw_emu",
            "vitis_hw_build",
            "vitis_hw_run"
        ],
        "category": "canary"
    }
}
